# include <iostream>
using namespace std;
void cafe_menu()  //This function is for showing cafe menu
{
	cout<<"\t\t--------:CAFE MENU:--------"<<endl;
	cout<<"Press(1-11)\n";
	cout<<"1.For Biryani=200\t2.For Chat=100\n3.For Samosa=30\t\t4.For Chips=50\n";
	cout<<"5.For Biscuits=25\t6.For Karahi=500\n7.For Noodles=150\t8.For Nahari=750\n";
	cout<<"9.For Juice=70\t\t10.For Pepsi=80\n11.For Water=60"<<endl;	
	
}          //Here (cafe menu) function closes


int taking_input_for_items(int a)    //This function is for taking inputs for items
{
	cin>>a;
	return a;
}                           //Here (taking_input_for_items) function closes

